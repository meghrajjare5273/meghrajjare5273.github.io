---
import Layout from "../layouts/Layout.astro";
import { Navbar } from "@/components/landing/Navbar";
import { HeroLetterReveal } from "@/components/landing/HeroLetterReveal";
---

<Layout>
  <Navbar client:load />
  <div >
    <HeroLetterReveal client:load />
  </div>
  
  <!-- Add sections for other nav items -->
  <section id="about" class="min-h-screen bg-white dark:bg-neutral-900">
    <!-- About content will go here -->
  </section>
  
  <section id="projects" class="min-h-screen bg-neutral-50 dark:bg-neutral-950">
    <!-- Projects content will go here -->
  </section>
  
  <section id="skills" class="min-h-screen bg-white dark:bg-neutral-900">
    <!-- Skills content will go here -->
  </section>
  
  <section id="contact" class="min-h-screen bg-neutral-50 dark:bg-neutral-950">
    <!-- Contact content will go here -->
  </section>
</Layout>
