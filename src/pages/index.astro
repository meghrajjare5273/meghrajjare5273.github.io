---
import Layout from '../layouts/Layout.astro';
import Hero from "@/components/landing/Hero"
import About from '@/components/landing/About';
import ImageCarousel from '@/components/landing/Projects';
import SignatureIntro from '@/components/loading/signature-intro';
---

<Layout>
  <SignatureIntro client:load />
  <Hero client:load />
  <About client:load />
  <ImageCarousel client:load />
</Layout>

<script>
  // Coordinate animations between components
  let introComplete = false;

  document.addEventListener('astro:page-load', () => {
    // Listen for intro completion
    window.addEventListener('signature-intro-complete', () => {
      introComplete = true;
      document.dispatchEvent(new CustomEvent('start-hero-animation'));
    });
  });
</script>
